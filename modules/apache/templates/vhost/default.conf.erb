<VirtualHost <%= vhost_name %>:<%= port %>>
<% if ssl == true -%>
  SSLEngine On
  SSLCertificateFile <%= ssl_cert %>
  SSLCertificateKeyFile <%= ssl_key %>
<% if ssl_chain != '' -%>
  SSLCertificateChainFile <%= ssl_chain %>
<% end -%>
<% end -%>
  ServerName <%= srvname %>
<% if serveraliases.is_a? Array -%>
<% serveraliases.each do |name| -%><%= "  ServerAlias #{name}\n" %><% end -%>
<% elsif serveraliases != '' -%>
<%= "  ServerAlias #{serveraliases}" %>
<% end -%>
  DocumentRoot <%= docroot %>
<% if redirect_ssl == true -%>
<%= "  RewriteEngine On" %>
<%= "  RewriteCond %{HTTP_HOST} (.*)" %>
<%= "  RewriteRule ^/(.*)$ https://%1/$1" %>
<% end -%>
  <Directory <%= docroot %>>
    Options <%= options %>
    AllowOverride <%= overrides %>
    Order allow,deny
<% if allow.is_a? Array -%>
<% allow.each do |acl| -%><%= "    allow from #{acl}\n" %><% end -%>
<% elsif allow != '' -%>
<%= "    allow from #{allow}" %>
<% end -%>
  </Directory>
  ErrorLog <%= log_dir %>/<%= name %>_error.log
  LogLevel warn
  CustomLog <%= log_dir %>/<%= name %>_access.log combined
  ServerSignature Off
</VirtualHost>

