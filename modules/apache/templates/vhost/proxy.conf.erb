# ************************************
# Default template in module thedailybeast-apache
# Managed by Puppet
# ************************************

<VirtualHost <%= vhost_name %>:<%= port %>>
<% if ssl == true -%>
  SSLEngine On
  SSLCertificateFile <%= ssl_cert %>
  SSLCertificateKeyFile <%= ssl_key %>
<% if ssl_chain != '' -%>
  SSLCertificateChainFile <%= ssl_chain %>
<% end -%>
<% end -%>
  ServerName <%= srvname %>
<% if serveraliases.is_a? Array -%>
<% serveraliases.each do |name| -%><%= "  ServerAlias #{name}\n" %><% end -%>
<% elsif serveraliases != '' -%>
<%= "  ServerAlias #{serveraliases}" -%>
<% end -%>
  DocumentRoot <%= docroot %>
  <Directory <%= docroot %>>
    Options <%= options %>
    AllowOverride <%= overrides %>
    Order allow,deny
<% if allow.is_a? Array -%>
<% allow.each do |acl| -%><%= "    allow from #{acl}\n" %><% end -%>
<% elsif allow != '' -%>
<%= "    allow from #{allow}" %>
<% end -%>
  </Directory>

  ProxyRequests Off
  <Proxy *>
<% if proxy_auth == true -%>
    AuthType <%= proxy_auth_type %>
    AuthName "<%= proxy_auth_name %>"
    AuthUserFile <%= proxy_auth_userfile %>
    Require valid-user
<% end -%>
    Order allow,deny
<% if allow.is_a? Array -%>
<% allow.each do |acl| -%><%= "    Allow from #{acl}\n" %><% end -%>
<% elsif allow != '' -%>
<%= "    Allow from #{allow}" %>
<% end -%>
  </Proxy>
<% if proxy_deny.is_a? Array -%>
<% proxy_deny.each do |name| -%>
<%= "  ProxyPass #{name} !\n" %>
<% end -%>
<% elsif proxy_deny != :undef -%>
<%= "  ProxyPass #{proxy_deny} !" %>
<% end -%>
  ProxyPass <%= src %>/ <%= dest %>/
  ProxyPassReverse <%= src %>/ <%= dest %>/
  ProxyPreserveHost <%= proxy_preserve_host %>
<%
  header_set.flatten.each do |r|
    header,value = r.split('=')
-%>
  Header set <%= header %> <%= value %>
<% end -%>
<% header_unset.flatten.each do |header| -%>
  Header unset <%= header %>
<% end -%>
<%
  request_header_set_real.flatten.each do |r|
    header,value = r.split('=')
-%>
  RequestHeader set <%= header %> <%= value %>
<% end -%>
<% request_header_unset.flatten.each do |header| -%>
  RequestHeader unset <%= header %>
<% end -%>

  ErrorLog <%= log_dir %>/<%= name %>_error.log
  LogLevel warn
  CustomLog <%= log_dir %>/<%= name %>_access.log combined
  ServerSignature Off
</VirtualHost>

