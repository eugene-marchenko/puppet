# /etc/default/monit

# Defaults for monit initscript.  This file is sourced by
# /bin/sh from /etc/init.d/monit.

# You must set this variable to yes for monit to start
<% if @monit_start -%>
START="<%= @monit_start %>"
<% else -%>
START=yes
<% end -%>

# Options to pass to monit
<% if @monit_opts -%>
MONIT_OPTS="<%= @monit_opts %>"
<% else -%>
#MONIT_OPTS=
<% end -%>
