<% 
  passwords = []

  if @vsftpd_email_passwords
    if @vsftpd_email_passwords.kind_of?(Array)
      passwords = @vsftpd_email_passwords
    else
      if @vsftpd_email_passwords =~ /, /
        passwords = @vsftpd_email_passwords.split(', ')
      elsif @vsftpd_email_passwords =~ /,/
        passwords = @vsftpd_email_passwords.split(',')
      else
        passwords = @vsftpd_email_passwords.split
      end
    end
  end
-%>
<% passwords.each do |password| -%>
<%= password %>
<% end -%>
